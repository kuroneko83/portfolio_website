---
// Contact Component - Futuristic Console Style
---

<section class="relative py-16 md:py-24 px-4" id="contact">
  <div class="max-w-5xl mx-auto">
    <!-- Section Header -->
    <div class="mb-12 md:mb-16 text-center">
      <h2
        class="text-4xl md:text-5xl lg:text-6xl font-display neon-text-cyan mb-4 glitch"
        data-text="CONTACT.SYS"
      >
        CONTACT.SYS
      </h2>
      <div
        class="h-1 w-32 md:w-48 mx-auto bg-gradient-to-r from-transparent via-neon-purple to-transparent"
      >
      </div>
      <p class="mt-4 md:mt-6 text-sm md:text-base text-gray-400 font-mono">// ESTABLISH CONNECTION</p>
    </div>

    <div class="grid md:grid-cols-2 gap-6 md:gap-8">
      <!-- Contact Form -->
      <div class="terminal">
        <div class="terminal-header">
          <div class="flex items-center gap-2">
            <div class="terminal-dot bg-neon-pink"></div>
            <div class="terminal-dot bg-neon-orange"></div>
            <div class="terminal-dot bg-neon-cyan"></div>
          </div>
          <span class="ml-auto text-xs text-gray-400 font-mono"
            >message_sender.exe</span
          >
        </div>

        <div class="terminal-body">
          <form class="space-y-6" id="contact-form">
            <!-- Name Input -->
            <div>
              <label class="block text-neon-cyan font-mono text-sm mb-2">
                &gt; ENTER_NAME:
              </label>
              <input
                type="text"
                name="name"
                required
                class="w-full bg-cyber-gray border border-neon-purple/30 rounded px-4 py-3 text-white font-mono focus:outline-none focus:border-neon-cyan focus:shadow-neon-cyan transition-all"
                placeholder="John Doe"
              />
            </div>

            <!-- Email Input -->
            <div>
              <label class="block text-neon-cyan font-mono text-sm mb-2">
                &gt; ENTER_EMAIL:
              </label>
              <input
                type="email"
                name="email"
                required
                class="w-full bg-cyber-gray border border-neon-purple/30 rounded px-4 py-3 text-white font-mono focus:outline-none focus:border-neon-cyan focus:shadow-neon-cyan transition-all"
                placeholder="john@example.com"
              />
            </div>

            <!-- Subject Input -->
            <div>
              <label class="block text-neon-cyan font-mono text-sm mb-2">
                &gt; ENTER_SUBJECT:
              </label>
              <input
                type="text"
                name="subject"
                required
                class="w-full bg-cyber-gray border border-neon-purple/30 rounded px-4 py-3 text-white font-mono focus:outline-none focus:border-neon-cyan focus:shadow-neon-cyan transition-all"
                placeholder="Project Inquiry"
              />
            </div>

            <!-- Message Input -->
            <div>
              <label class="block text-neon-cyan font-mono text-sm mb-2">
                &gt; ENTER_MESSAGE:
              </label>
              <textarea
                name="message"
                required
                rows="5"
                class="w-full bg-cyber-gray border border-neon-purple/30 rounded px-4 py-3 text-white font-mono focus:outline-none focus:border-neon-cyan focus:shadow-neon-cyan transition-all resize-none"
                placeholder="Your message here..."></textarea>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="w-full neon-button">
              Send Transmission
            </button>

            <!-- Status Message -->
            <div id="form-status" class="hidden font-mono text-sm text-center">
            </div>
          </form>
        </div>
      </div>

      <!-- Contact Info & Social Links -->
      <div class="space-y-4 md:space-y-6">
        <!-- Direct Contact Info -->
        <div class="cyber-card p-4 md:p-6">
          <h3 class="text-xl md:text-2xl font-cyber neon-text-purple mb-4 md:mb-6">
            DIRECT_ACCESS
          </h3>

          <div class="space-y-3 md:space-y-4">
            <!-- Email -->
            <div class="flex items-start gap-3 md:gap-4 group cursor-pointer">
              <div
                class="w-10 h-10 md:w-12 md:h-12 flex items-center justify-center neon-border-cyan rounded group-hover:animate-glow flex-shrink-0"
              >
                <svg
                  class="w-5 h-5 md:w-6 md:h-6 text-neon-cyan"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <div class="min-w-0">
                <div class="text-[10px] md:text-xs text-gray-500 font-mono mb-1">EMAIL:</div>
                <a
                  href="mailto:your.email@example.com"
                  class="text-gray-300 hover:neon-text-cyan transition-colors font-mono text-xs md:text-sm break-all"
                >
                  atilacloudengineer@gmail.com
                </a>
              </div>
            </div>

            <!-- Location -->
            <div class="flex items-start gap-4 group">
              <div
                class="w-12 h-12 flex items-center justify-center neon-border-purple rounded group-hover:animate-glow"
              >
                <svg
                  class="w-6 h-6 text-neon-purple"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <div class="text-xs text-gray-500 font-mono mb-1">
                  LOCATION:
                </div>
                <p class="text-gray-300 font-mono">Tokyo, Japan</p>
              </div>
            </div>

            <!-- Availability -->
            <div class="flex items-start gap-4 group">
              <div
                class="w-12 h-12 flex items-center justify-center neon-border-pink rounded group-hover:animate-glow"
              >
                <svg
                  class="w-6 h-6 text-neon-pink"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <div class="text-xs text-gray-500 font-mono mb-1">
                  AVAILABILITY:
                </div>
                <div class="flex items-center gap-2">
                  <div class="w-2 h-2 rounded-full bg-green-400 animate-pulse">
                  </div>
                  <p class="text-gray-300 font-mono">Available for Projects</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Social Links -->
        <div class="cyber-card p-4 md:p-6">
          <h3 class="text-xl md:text-2xl font-cyber neon-text-pink mb-4 md:mb-6">
            SOCIAL_NETWORKS
          </h3>

          <div class="grid grid-cols-2 gap-3 md:gap-4">
            <!-- GitHub -->
            <a
              href="https://github.com/yourusername"
              target="_blank"
              rel="noopener noreferrer"
              class="flex flex-col items-center justify-center gap-2 md:gap-3 p-4 md:p-6 cyber-card text-neon-cyan hover:text-neon-pink transition-all social-link"
            >
              <svg class="w-6 h-6 md:w-8 md:h-8" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                ></path>
              </svg>
              <span class="font-mono text-xs md:text-sm">GitHub</span>
            </a>

            <!-- LinkedIn -->
            <a
              href="https://linkedin.com/in/yourusername"
              target="_blank"
              rel="noopener noreferrer"
              class="flex flex-col items-center justify-center gap-2 md:gap-3 p-4 md:p-6 cyber-card text-neon-cyan hover:text-neon-pink transition-all social-link"
            >
              <svg class="w-6 h-6 md:w-8 md:h-8" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                ></path>
              </svg>
              <span class="font-mono text-xs md:text-sm">LinkedIn</span>
            </a>

            <!-- Twitter -->
            <a
              href="https://twitter.com/yourusername"
              target="_blank"
              rel="noopener noreferrer"
              class="flex flex-col items-center justify-center gap-2 md:gap-3 p-4 md:p-6 cyber-card text-neon-cyan hover:text-neon-pink transition-all social-link"
            >
              <svg class="w-6 h-6 md:w-8 md:h-8" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
                ></path>
              </svg>
              <span class="font-mono text-xs md:text-sm">Twitter</span>
            </a>

            <!-- Portfolio/Website -->
            <a
              href="https://yourwebsite.com"
              target="_blank"
              rel="noopener noreferrer"
              class="flex flex-col items-center justify-center gap-2 md:gap-3 p-4 md:p-6 cyber-card text-neon-cyan hover:text-neon-pink transition-all social-link"
            >
              <svg
                class="w-6 h-6 md:w-8 md:h-8"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
                ></path>
              </svg>
              <span class="font-mono text-xs md:text-sm">Website</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .social-link:hover {
    transform: translateY(-8px);
  }

  input:focus,
  textarea:focus {
    box-shadow: 0 0 0 2px rgba(0, 234, 255, 0.2);
  }
</style>

<script>
  // Form submission handler
  const form = document.getElementById("contact-form");
  const status = document.getElementById("form-status");

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    const formData = new FormData(form as HTMLFormElement);
    const data = Object.fromEntries(formData);

    // Show loading state
    status!.classList.remove("hidden");
    status!.textContent = "> SENDING_MESSAGE...";
    status!.className =
      "font-mono text-sm text-center neon-text-cyan animate-pulse";

    // Simulate form submission (replace with your actual endpoint)
    setTimeout(() => {
      // Success
      status!.textContent = "> MESSAGE_SENT_SUCCESSFULLY";
      status!.className = "font-mono text-sm text-center neon-text-pink";
      (form as HTMLFormElement).reset();

      // Play success sound (optional)
      // new Audio('/sounds/success.mp3').play();

      // Hide message after 5 seconds
      setTimeout(() => {
        status!.classList.add("hidden");
      }, 5000);
    }, 2000);

    // In production, replace above with:
    /*
    try {
      const response = await fetch('/api/contact', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });

      if (response.ok) {
        status!.textContent = '> MESSAGE_SENT_SUCCESSFULLY';
        status!.className = 'font-mono text-sm text-center neon-text-pink';
        (form as HTMLFormElement).reset();
      } else {
        throw new Error('Failed to send message');
      }
    } catch (error) {
      status!.textContent = '> ERROR: MESSAGE_FAILED';
      status!.className = 'font-mono text-sm text-center text-red-500';
    }
    */
  });

  // Add retro click sound effect to buttons (optional)
  document.querySelectorAll("button, .neon-button").forEach((button) => {
    button.addEventListener("click", () => {
      // Play click sound
      // new Audio('/sounds/click.mp3').play();
    });
  });
</script>

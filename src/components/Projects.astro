---
// Projects Component - Terminal Style Cards
const projects = [
  {
    id: 1,
    title: "Cyberpunk Dashboard",
    description: "Real-time analytics dashboard with neon UI components and live data visualization. Built with React and D3.js.",
    tech: ["React", "TypeScript", "D3.js", "Tailwind"],
    github: "https://github.com/yourusername/project1",
    demo: "https://demo.yoursite.com/project1",
    status: "DEPLOYED"
  },
  {
    id: 2,
    title: "Neural Network API",
    description: "RESTful API service for machine learning models with real-time predictions and scalable architecture.",
    tech: ["Node.js", "Python", "TensorFlow", "Docker"],
    github: "https://github.com/yourusername/project2",
    demo: "https://demo.yoursite.com/project2",
    status: "ACTIVE"
  },
  {
    id: 3,
    title: "Blockchain Explorer",
    description: "Web3 application for exploring blockchain transactions with sleek cyberpunk interface.",
    tech: ["Next.js", "Web3.js", "Ethers", "GraphQL"],
    github: "https://github.com/yourusername/project3",
    demo: "https://demo.yoursite.com/project3",
    status: "BETA"
  },
  {
    id: 4,
    title: "AI Chat Interface",
    description: "Conversational AI chatbot with natural language processing and context-aware responses.",
    tech: ["Flutter", "Python", "OpenAI", "FastAPI"],
    github: "https://github.com/yourusername/project4",
    demo: "https://demo.yoursite.com/project4",
    status: "IN_DEV"
  },
  {
    id: 5,
    title: "E-Commerce Platform",
    description: "Full-stack e-commerce solution with payment integration, inventory management, and admin dashboard.",
    tech: ["React", "Node.js", "PostgreSQL", "Stripe"],
    github: "https://github.com/yourusername/project5",
    demo: "https://demo.yoursite.com/project5",
    status: "DEPLOYED"
  },
  {
    id: 6,
    title: "Task Automation Suite",
    description: "CLI tool for automating development workflows with customizable scripts and integrations.",
    tech: ["Node.js", "TypeScript", "CLI", "Git"],
    github: "https://github.com/yourusername/project6",
    demo: null,
    status: "ACTIVE"
  }
];

const statusColors = {
  DEPLOYED: "neon-cyan",
  ACTIVE: "neon-pink",
  BETA: "neon-purple",
  IN_DEV: "neon-orange"
};
---

<section class="relative py-24 px-4" id="projects">
  <div class="max-w-7xl mx-auto">
    <!-- Section Header -->
    <div class="mb-16 text-center">
      <h2 class="text-5xl md:text-6xl font-display neon-text-pink mb-4 glitch" data-text="PROJECTS.EXE">
        PROJECTS.EXE
      </h2>
      <div class="h-1 w-48 mx-auto bg-gradient-to-r from-transparent via-neon-purple to-transparent"></div>
      <p class="mt-6 text-gray-400 font-mono">// RECENT BUILDS & DEPLOYMENTS</p>
    </div>

    <!-- Projects Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {projects.map((project) => (
        <div class="terminal group">
          <!-- Terminal Header -->
          <div class="terminal-header">
            <div class="flex items-center gap-2">
              <div class="terminal-dot bg-neon-pink"></div>
              <div class="terminal-dot bg-neon-orange"></div>
              <div class="terminal-dot bg-neon-cyan"></div>
            </div>
            <span class="ml-auto text-xs text-gray-400 font-mono">
              PROJECT_{project.id.toString().padStart(3, '0')}
            </span>
          </div>

          <!-- Terminal Body -->
          <div class="terminal-body">
            <!-- Status Badge -->
            <div class="mb-4">
              <span class={`inline-flex items-center gap-2 px-3 py-1 rounded-full border border-${statusColors[project.status]} text-${statusColors[project.status]} text-xs font-mono`}>
                <span class="w-2 h-2 rounded-full bg-current animate-pulse"></span>
                {project.status}
              </span>
            </div>

            <!-- Project Title -->
            <h3 class="text-xl font-cyber neon-text-cyan mb-3 group-hover:animate-glow">
              {project.title}
            </h3>

            <!-- Description -->
            <p class="text-gray-400 text-sm mb-4 leading-relaxed min-h-[60px]">
              {project.description}
            </p>

            <!-- Tech Stack -->
            <div class="mb-6">
              <div class="text-xs text-gray-500 font-mono mb-2">TECH_STACK:</div>
              <div class="flex flex-wrap gap-2">
                {project.tech.map((tech) => (
                  <span class="px-2 py-1 bg-cyber-gray text-neon-purple text-xs font-mono rounded border border-neon-purple/30">
                    {tech}
                  </span>
                ))}
              </div>
            </div>

            <!-- Links -->
            <div class="flex gap-3 pt-4 border-t border-gray-700">
              <a
                href={project.github}
                target="_blank"
                rel="noopener noreferrer"
                class="flex-1 text-center py-2 border border-neon-pink text-neon-pink hover:bg-neon-pink hover:text-black transition-all font-mono text-sm rounded group/btn"
              >
                <span class="group-hover/btn:animate-pulse">GitHub</span>
              </a>
              {project.demo && (
                <a
                  href={project.demo}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex-1 text-center py-2 border border-neon-cyan text-neon-cyan hover:bg-neon-cyan hover:text-black transition-all font-mono text-sm rounded group/btn"
                >
                  <span class="group-hover/btn:animate-pulse">Demo</span>
                </a>
              )}
              {!project.demo && (
                <div class="flex-1 text-center py-2 border border-gray-700 text-gray-600 font-mono text-sm rounded cursor-not-allowed">
                  N/A
                </div>
              )}
            </div>
          </div>

          <!-- Glitch effect on hover -->
          <div class="absolute inset-0 bg-gradient-to-r from-neon-pink/0 via-neon-pink/5 to-neon-pink/0 opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none"></div>
        </div>
      ))}
    </div>

    <!-- View All Projects Button -->
    <div class="text-center mt-12">
      <a href="https://github.com/yourusername" target="_blank" rel="noopener noreferrer" class="neon-button">
        View All Projects
      </a>
    </div>
  </div>
</section>

<style>
  .terminal {
    position: relative;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .terminal:hover {
    transform: translateY(-8px) scale(1.02);
  }

  /* Animated corner brackets on hover */
  .terminal::before,
  .terminal::after {
    content: '';
    position: absolute;
    width: 20px;
    height: 20px;
    border: 2px solid transparent;
    transition: all 0.3s ease;
  }

  .terminal::before {
    top: -2px;
    left: -2px;
    border-top-color: #00eaff;
    border-left-color: #00eaff;
  }

  .terminal::after {
    bottom: -2px;
    right: -2px;
    border-bottom-color: #ff00e5;
    border-right-color: #ff00e5;
  }

  .terminal:hover::before,
  .terminal:hover::after {
    width: calc(100% + 4px);
    height: calc(100% + 4px);
  }
</style>

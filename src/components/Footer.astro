        </div>

        <!-- System Status -->
        <div class="p-3 bg-cyber-gray border border-neon-purple/30 rounded">
          <div class="flex items-center gap-2 mb-2">
            <div class="w-2 h-2 rounded-full bg-green-400 animate-pulse"></div>
            <span class="text-xs font-mono text-gray-400">SYSTEM_STATUS:</span>
          </div>
          <span class="text-xs font-mono neon-text-cyan">ALL SYSTEMS OPERATIONAL</span>
        </div>
      </div>
    </div>

    <!-- Divider -->
    <div class="h-px bg-gradient-to-r from-transparent via-neon-purple to-transparent mb-8"></div>

    <!-- Bottom Bar -->
    <div class="flex flex-col md:flex-row justify-between items-center gap-4">
      <!-- Copyright -->
      <div class="text-gray-500 font-mono text-sm">
        <span class="neon-text-pink">&copy;</span> {currentYear} ‚Äî
        <span class="neon-text-cyan">Designed in the Neon Era</span>
      </div>

      <!-- Credits -->
      <div class="text-gray-600 font-mono text-xs flex items-center gap-2">
        <span>Built with</span>
        <span class="neon-text-purple">Astro</span>
        <span>+</span>
        <span class="neon-text-cyan">Tailwind</span>
        <span>+</span>
        <span class="neon-text-pink animate-pulse">‚ù§</span>
      </div>

      <!-- Back to Top -->
      <a
        href="#home"
        class="flex items-center gap-2 text-gray-400 hover:neon-text-purple transition-all font-mono text-sm group"
      >
        <span>RETURN_TO_TOP</span>
        <svg class="w-4 h-4 group-hover:animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
        </svg>
      </a>
    </div>

    <!-- Hidden Easter Egg -->
    <div class="mt-8 text-center">
      <button
        id="easter-egg-btn"
        class="text-cyber-gray hover:neon-text-purple transition-colors font-mono text-xs"
      >
        [CLASSIFIED]
      </button>
    </div>
  </div>
</footer>

<script>
  // Easter egg functionality
  const easterEggBtn = document.getElementById('easter-egg-btn');
  let clickCount = 0;

  easterEggBtn?.addEventListener('click', () => {
    clickCount++;

    if (clickCount === 3) {
      easterEggBtn.textContent = '> ACCESS_GRANTED: You found the secret! üéÆ';
      easterEggBtn.className = 'neon-text-pink animate-pulse font-mono text-xs';

      // Add cool effect
      document.body.classList.add('vapor-gradient');

      setTimeout(() => {
        document.body.classList.remove('vapor-gradient');
        easterEggBtn.textContent = '[CLASSIFIED]';
        easterEggBtn.className = 'text-cyber-gray hover:neon-text-purple transition-colors font-mono text-xs';
        clickCount = 0;
      }, 5000);
    }
  });

  // Smooth scroll behavior
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href') || '');
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });
</script>

---
// Experience Component - Timeline with Neon Nodes
const experiences = [
  {
    year: "2023 - Present",
    role: "Senior Software Engineer",
    company: "Tech Corp Inc.",
    location: "Remote",
    description: "Leading full-stack development of enterprise applications. Architecting scalable solutions and mentoring junior developers.",
    achievements: [
      "Increased system performance by 40%",
      "Led team of 5 developers",
      "Implemented CI/CD pipeline"
    ],
    tech: ["React", "Node.js", "AWS", "Docker"]
  },
  {
    year: "2021 - 2023",
    role: "Full-Stack Developer",
    company: "Digital Solutions Ltd.",
    location: "San Francisco, CA",
    description: "Developed and maintained web applications for diverse clients. Collaborated with cross-functional teams to deliver high-quality products.",
    achievements: [
      "Built 15+ client projects",
      "Reduced load times by 60%",
      "Introduced Agile methodologies"
    ],
    tech: ["TypeScript", "Python", "PostgreSQL", "React"]
  },
  {
    year: "2020 - 2021",
    role: "Frontend Developer",
    company: "StartUp Ventures",
    location: "Austin, TX",
    description: "Created responsive and interactive user interfaces. Worked closely with designers to implement pixel-perfect designs.",
    achievements: [
      "Launched 3 major products",
      "Improved accessibility scores",
      "Optimized bundle size by 50%"
    ],
    tech: ["JavaScript", "Vue.js", "Tailwind", "Figma"]
  },
  {
    year: "2019 - 2020",
    role: "Junior Developer",
    company: "Code Academy",
    location: "New York, NY",
    description: "Started professional journey building web components and learning best practices. Contributed to open-source projects.",
    achievements: [
      "Completed 50+ coding challenges",
      "Built personal portfolio",
      "Earned 5 certifications"
    ],
    tech: ["HTML", "CSS", "JavaScript", "Git"]
  }
];
---

<section class="relative py-24 px-4" id="experience">
  <div class="max-w-6xl mx-auto">
    <!-- Section Header -->
    <div class="mb-16 text-center">
      <h2 class="text-5xl md:text-6xl font-display neon-text-purple mb-4 glitch" data-text="EXPERIENCE.DAT">
        EXPERIENCE.DAT
      </h2>
      <div class="h-1 w-48 mx-auto bg-gradient-to-r from-transparent via-neon-cyan to-transparent"></div>
      <p class="mt-6 text-gray-400 font-mono">// PROFESSIONAL TIMELINE</p>
    </div>

    <!-- Timeline -->
    <div class="relative">
      <!-- Center Line -->
      <div class="hidden md:block absolute left-1/2 transform -translate-x-1/2 w-0.5 h-full bg-gradient-to-b from-neon-pink via-neon-purple to-neon-cyan"></div>

      <!-- Timeline Items -->
      <div class="space-y-12">
        {experiences.map((exp, index) => (
          <div class={`relative ${index % 2 === 0 ? 'md:pr-[50%]' : 'md:pl-[50%] md:text-right'}`}>
            <!-- Timeline Node -->
            <div class="hidden md:block absolute top-0 left-1/2 transform -translate-x-1/2">
              <div class="relative">
                <div class="w-6 h-6 rounded-full bg-cyber-darker border-4 border-neon-cyan animate-pulse"></div>
                <div class="absolute inset-0 w-6 h-6 rounded-full bg-neon-cyan opacity-50 animate-ping"></div>
              </div>
            </div>

            <!-- Content Card -->
            <div class={`cyber-card p-6 ${index % 2 === 0 ? 'md:mr-8' : 'md:ml-8'}`}>
              <!-- Year Badge -->
              <div class={`inline-block mb-4 ${index % 2 === 0 ? '' : 'md:float-right md:ml-4'}`}>
                <div class="px-4 py-2 neon-border-pink rounded font-mono text-sm neon-text-pink">
                  {exp.year}
                </div>
              </div>

              <!-- Role & Company -->
              <div class="mb-4">
                <h3 class="text-2xl font-cyber neon-text-cyan mb-2">
                  {exp.role}
                </h3>
                <div class="flex items-center gap-2 text-gray-400 font-mono text-sm">
                  <span class="neon-text-purple">{exp.company}</span>
                  <span>•</span>
                  <span>{exp.location}</span>
                </div>
              </div>

              <!-- Description -->
              <p class="text-gray-300 mb-4 leading-relaxed">
                {exp.description}
              </p>

              <!-- Achievements -->
              <div class="mb-4">
                <div class="text-xs text-gray-500 font-mono mb-2">ACHIEVEMENTS:</div>
                <ul class="space-y-2">
                  {exp.achievements.map((achievement) => (
                    <li class="flex items-start gap-2 text-sm text-gray-400">
                      <span class="text-neon-pink mt-1">▹</span>
                      <span>{achievement}</span>
                    </li>
                  ))}
                </ul>
              </div>

              <!-- Tech Stack -->
              <div>
                <div class="text-xs text-gray-500 font-mono mb-2">TECH_STACK:</div>
                <div class="flex flex-wrap gap-2">
                  {exp.tech.map((tech) => (
                    <span class="px-3 py-1 bg-cyber-gray text-neon-purple text-xs font-mono rounded border border-neon-purple/30">
                      {tech}
                    </span>
                  ))}
                </div>
              </div>

              <!-- Connector Line (Mobile) -->
              <div class="md:hidden absolute left-0 top-0 bottom-0 w-0.5 bg-gradient-to-b from-neon-pink to-neon-cyan"></div>
              <div class="md:hidden absolute left-0 top-6 w-3 h-3 rounded-full bg-neon-cyan border-2 border-cyber-darker transform -translate-x-1/3"></div>
            </div>
          </div>
        ))}
      </div>

      <!-- End Node -->
      <div class="hidden md:flex justify-center mt-12">
        <div class="relative">
          <div class="w-8 h-8 rounded-full bg-gradient-to-br from-neon-pink via-neon-purple to-neon-cyan animate-glow"></div>
          <div class="absolute -bottom-8 left-1/2 transform -translate-x-1/2 whitespace-nowrap font-mono text-xs text-gray-500">
            LOADING_FUTURE...
          </div>
        </div>
      </div>
    </div>

    <!-- Download Resume Button -->
    <div class="text-center mt-16">
      <a href="/resume.pdf" download class="neon-button">
        Download Resume
      </a>
    </div>
  </div>
</section>

<style>
  /* Timeline animations */
  @keyframes timeline-glow {
    0%, 100% {
      box-shadow: 0 0 10px rgba(0, 234, 255, 0.5);
    }
    50% {
      box-shadow: 0 0 20px rgba(255, 0, 229, 0.8);
    }
  }

  .cyber-card {
    position: relative;
  }

  .cyber-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, #00eaff, transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .cyber-card:hover::before {
    opacity: 1;
    animation: scan-line 2s linear infinite;
  }

  @keyframes scan-line {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }
</style>
